<view class="container">
  <scroll-view class="scroll-container" scroll-y="true" bounces="true" >
    <block wx:for="{{items}}" wx:key="timeStamp" wx:for-item="item">
      <view class="scroll-view-item">
       <view class="scroll-view-item-info">
        <image style="width: 100px; height: 100px; background-color: #eeeeee;"  mode="aspectFill" src="{{item.src}}"></image>
        <text>{{item.name}}</text>
        <text>{{item.school}}</text>
       </view>
       <view class="scroll-view-item-content">
        <text>{{item.content}}</text>
       </view>
      </view>
    </block>
  </scroll-view>
</view> 
